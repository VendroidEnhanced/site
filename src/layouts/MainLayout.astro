---
import "../../node_modules/beercss/dist/cdn/beer.min.css";
import "../colors.css";
import "@fontsource-variable/roboto";
import NavbarLink from "../components/NavbarLink.astro";

const { name } = Astro.props;
const isMainPage = name === "VendroidEnhanced";

const metaTags = {
	title: isMainPage ? "VendroidEnhanced" : `${name} - VendroidEnhanced`,
	description: "Use Vencord on your Android device",
	color: "#7c83e6",
	image: "/vde.png"
};
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<script>
			import "../../node_modules/beercss/dist/cdn/beer.min.js";
		</script>
		<meta name="og:type" content="website" />
		<meta name="description" content={metaTags.description} />
		<meta name="og:title" content={metaTags.title} />
		<meta name="og:description" content={metaTags.description} />
		<meta name="og:image" content={metaTags.image} />
		<meta name="theme-color" content={metaTags.color} />
		<meta name="darkreader-lock" />
		<title>{isMainPage ? name : `${name} -  VendroidEnhanced`}</title><style
		>
			#logo {
				border-radius: 40px;
			}

			main {
				padding: 20px;
			}

			body {
				font-family: "Roboto Variable";
			}
		</style></head
	>

	<body>
		<header class="fixed blur">
			<nav>
				<a href="/">
					<img
						src="/vde.png"
						alt="VendroidEnhanced logo"
						width="50px"
						id="logo"
					/>
				</a>
				<h6 class="max"></h6>
				<NavbarLink href="/download">Download</NavbarLink>
				<NavbarLink href="/faq">FAQ</NavbarLink>
				<NavbarLink
					href="https://github.com/orgs/VendroidEnhanced/projects/1"
					>Roadmap</NavbarLink
				>
			</nav>
		</header>
		<main class="responsive">
			{
				!isMainPage && (
					<h3 style="font-weight: 500; margin-bottom: 20px;">
						{name}
					</h3>
				)
			}
			<slot />
		</main>
	</body>
</html>
